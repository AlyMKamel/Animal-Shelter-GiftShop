<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #fef5fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.animalapp.AboutUsController">


    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <!-- Title Label with Border -->
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="68.0" prefWidth="280.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #000000; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10px;" text="About Us" textAlignment="CENTER">
         <font>
            <Font name="Aldhabi" size="12.0" />
         </font></Label>
        <!-- Description Label with Border -->
        <Label style="-fx-font-size: 16px; -fx-text-fill: #000000; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10px;" text="Learn more about our mission and values." />

        <!-- About Us Text Area with Border -->
        <TextArea fx:id="aboutUsText" editable="false" prefHeight="300.0" prefWidth="400.0" style="-fx-font-size: 14px; -fx-text-fill: #000000; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10px;" text="We are a dedicated team of animal lovers committed to finding loving homes for pets in need. Our mission is to rescue, rehabilitate, and rehome animals, providing them with the care and compassion they deserve. At our shelter, we believe every animal deserves a second chance. We work tirelessly to match pets with the perfect families, ensuring a safe and happy future for all. Our volunteers and staff are passionate about animal welfare and are always here to help. Thank you for supporting our cause and considering adoption. Together, we can make a difference in the lives of these wonderful animals." wrapText="true">
            We are a dedicated team of animal lovers committed to finding loving homes for pets in need. Our mission is to rescue, rehabilitate, and rehome animals, providing them with the care and compassion they deserve.

            At our shelter, we believe every animal deserves a second chance. We work tirelessly to match pets with the perfect families, ensuring a safe and happy future for all. Our volunteers and staff are passionate about animal welfare and are always here to help.

            Thank you for supporting our cause and considering adoption. Together, we can make a difference in the lives of these wonderful animals.
        </TextArea>

        <!-- Back Button -->
        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="691.0" spacing="20">
            <Button fx:id="Home" onAction="#handleHomeClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Home" />
         <Button fx:id="addAnimal" onAction="#handleAddClick" prefHeight="42.0" prefWidth="95.0" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Add Pet" />
            <Button fx:id="Adopt" onAction="#handleAdoptClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Adopt" />
            <Button fx:id="GiveUp" onAction="#handleGiveUpClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Give Up" />
            <Button fx:id="Contact" onAction="#handleContactClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Contact" />
            <Button fx:id="About" onAction="#handleAboutClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="About" />
            <Button fx:id="Donate" onAction="#handleDonateClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Donate" />

        </HBox>
    </VBox>
</StackPane>
