<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: #fef5fb;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.animalapp.ContactController">

    <ImageView fitHeight="36.0" fitWidth="51.0" layoutX="6.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@burger-bar.png" />
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-background-radius: 20; -fx-border-radius: 20;">
        <!-- Title Label with Border -->
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #000000; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 15; -fx-text-alignment: center;" text="Contact Us" />

        <!-- Name Field -->
        <TextField fx:id="nameField" promptText="Your Name" style="-fx-font-size: 16px; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 10;" prefWidth="400.0" />

        <!-- Email Field -->
        <TextField fx:id="emailField" promptText="Your Email" style="-fx-font-size: 16px; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 10;" prefWidth="400.0" />

        <!-- Message Area -->
        <TextArea fx:id="messageArea" promptText="Your Message" wrapText="true" style="-fx-font-size: 16px; -fx-border-color: #fface3; -fx-border-width: 2; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 10;" prefHeight="200.0" prefWidth="400.0" /><![CDATA[
ntainer -->
        <HBox alignment="CENTER" spacing="20">
            <!-- Submit Button -->
            <Button fx:id="submitButton" onAction="#handleSubmitClick" style="-fx-background-color: #fface3; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15; -fx-border-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Submit" />

        </HBox>
        <HBox alignment="CENTER" prefHeight="62.0" prefWidth="691.0" spacing="20">
            <Button fx:id="Home" onAction="#handleHomeClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Home" />
            <Button fx:id="Contact" onAction="#handleContactClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Contact Us" />
            <Button fx:id="Adopt" onAction="#handleAdoptClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Adopt a Pet" />
            <Button fx:id="GiveUp" onAction="#handleGiveUpClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Give Up For Adoption" />
            <Button fx:id="About" onAction="#handleAboutClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="About Us" />
            <Button fx:id="Donate" onAction="#handleDonateClick" style="-fx-background-color: #fface3; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-color: #000000; -fx-border-width: 1; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 2, 2);" text="Donate" />

        </HBox>
    </VBox>
</StackPane>
